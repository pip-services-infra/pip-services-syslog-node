import { Category } from 'pip-services-runtime-node';
import { ComponentDescriptor } from 'pip-services-runtime-node';
import { ComponentSet } from 'pip-services-runtime-node';
import { LambdaFunction } from 'pip-services-runtime-node';

import { EventLogMicroservice } from '../run/EventLogMicroservice';
import { IEventLogBusinessLogic } from '../logic/IEventLogBusinessLogic';

export class EventLogLambdaFunction extends LambdaFunction {
    private _logic: IEventLogBusinessLogic;

    constructor() {
        super(new EventLogMicroservice());
    }

    public link(components: ComponentSet) {
		this._logic = <IEventLogBusinessLogic>components.getOneOptional(
			new ComponentDescriptor(Category.BusinessLogic, "pip-services-eventlog", "*", "*")
		);

        super.link(components);        

        this.registerCommands(this._logic.getCommands());
    }
    
}